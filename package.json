{
  "name": "maxtdesign-pdf-viewer",
  "version": "1.0.0",
  "description": "The fastest PDF viewer for WordPress",
  "author": "MaxtDesign",
  "license": "GPL-2.0-or-later",
  "private": true,
  "scripts": {
    "build": "wp-scripts build blocks/pdf-viewer/index.js --output-path=blocks/pdf-viewer/build",
    "start": "wp-scripts start blocks/pdf-viewer/index.js --output-path=blocks/pdf-viewer/build",
    "lint:js": "wp-scripts lint-js blocks/pdf-viewer/",
    "lint:css": "wp-scripts lint-style blocks/pdf-viewer/",
    "format": "wp-scripts format blocks/pdf-viewer/",
    "install-pdfjs": "node scripts/copy-pdfjs.js",
    "postinstall": "npm run install-pdfjs",
    "update-pdfjs": "npm update pdfjs-dist",
    "postupdate": "npm run install-pdfjs"
  },
  "dependencies": {
    "pdfjs-dist": "^4.0.379"
  },
  "devDependencies": {
    "@wordpress/scripts": "^27.0.0"
  },
  "engines": {
    "node": ">=16.0.0",
    "npm": ">=8.0.0"
  },
  "repository": {
    "type": "git",
    "url": ""
  }
}

